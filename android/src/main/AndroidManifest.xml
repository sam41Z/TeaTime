<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="sam.teatime">

  <uses-permission android:name="android.permission.WAKE_LOCK"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".activities.TeaActivity"
      android:screenOrientation="portrait">
    </activity>
    <activity
      android:name=".activities.TimerActivity"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <service android:name=".timer.TimerNotificationService"/>

    <receiver android:name=".receiver.TimerReceiver"/>
    <receiver android:name=".receiver.CancelNotificationReceiver"/>

    <activity android:name=".activities.EditorActivity">
    </activity>
  </application>

</manifest>