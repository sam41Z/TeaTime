<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/activity_timer"
  android:layout_width="match_parent"
  android:background="@android:color/white"
  android:layout_height="match_parent"
  tools:context="sam.teatime.activities.TimerActivity">

  <LinearLayout
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:id="@+id/infusionContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
      android:id="@+id/previous_infusion"
      android:src="@drawable/vectalign_vector_drawable_previous"
      android:padding="6dp"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_gravity="center_vertical"/>

    <TextView
      android:id="@+id/tea_infusion"
      tools:text="Infusion: 1"
      android:fontFamily="sans-serif-condensed"
      android:textSize="32sp"
      android:layout_width="wrap_content"
      android:layout_height="48dp"/>

    <android.support.v7.widget.AppCompatImageView
      android:id="@+id/next_infusion"
      android:src="@drawable/vectalign_vector_drawable_next"
      android:padding="6dp"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_gravity="center_vertical"/>
  </LinearLayout>

  <LinearLayout
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:paddingTop="60dp"
    android:id="@+id/timeContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
      android:id="@+id/timer_min"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:textSize="48sp"
      tools:text="5m"/>
    <TextView
      android:id="@+id/timer_sec"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-light"
      android:textSize="48sp"
      tools:text="10s"/>
  </LinearLayout>

  <android.support.v7.widget.AppCompatImageView
    android:paddingBottom="48dp"
    android:id="@+id/play_pause"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_below="@+id/timeContainer"
    android:layout_centerHorizontal="true"/>

  <ProgressBar
    android:layout_below="@id/play_pause"
    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
    android:id="@+id/tea_progress"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <TextView
    android:layout_below="@id/tea_progress"
    android:id="@+id/tea_name"
    tools:text="Oolong"
    android:layout_centerInParent="true"
    android:fontFamily="sans-serif-condensed"
    android:textSize="32sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <LinearLayout
    android:id="@+id/tea_time"
    android:layout_centerInParent="true"
    android:layout_below="@id/tea_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
      android:layout_width="wrap_content"
      android:id="@+id/tea_mins"
      tools:text="5m"
      android:textSize="24sp"
      android:fontFamily="sans-serif"
      android:layout_height="wrap_content"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_toRightOf="@id/tea_mins"
      android:id="@+id/tea_secs"
      android:layout_below="@id/tea_name"
      tools:text="10s"
      android:textSize="24sp"
      android:fontFamily="sans-serif-thin"
      android:layout_height="wrap_content"/>
  </LinearLayout>

  <TextView
    android:layout_width="wrap_content"
    android:id="@+id/tea_temp"
    android:layout_below="@id/tea_time"
    android:layout_centerInParent="true"
    tools:text="90Â°C"
    android:textSize="24sp"
    android:fontFamily="sans-serif"
    android:layout_height="wrap_content"/>

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/fabTimer"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_margin="16dp"
    app:srcCompat="@drawable/ic_av_playlist_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</android.support.percent.PercentRelativeLayout>
